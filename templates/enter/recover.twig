{% extends 'base.twig' %}

{% block title %}
    {% if not confirmed %}
        Matcha: password recover
    {% else %}
        Matcha: set new password
    {% endif %}
{% endblock %}

{% block content %}

    {% if not confirmed %}
        <form method="post" action="/recover/validate">
            login<br>
            <input type="text" name="login"><br>
            email<br>
            <input type="email" name="email"><br>
            <button type="submit">ok</button>
        </form>
    {% else %}
        <form method="post" action="/recover/set">
            <p>{{ login }}, please set your new password</p>
            new password<br>
            <input type="password" name="password"><br>
            confirm<br>
            <input type="password" name="confirm"><br>
            <input type="text" name="login" style="display: none" value="{{ login }}">
            <input type="text" name="token" style="display: none" value="{{ token }}">
            <button type="submit">ok</button>
        </form>
    {% endif %}
    <a href="{{ path_for('login') }}">back</a>

{% endblock %}